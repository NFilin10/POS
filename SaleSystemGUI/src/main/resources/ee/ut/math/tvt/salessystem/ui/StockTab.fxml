<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0">

        <!-- new product adding form -->
        <GridPane alignment="CENTER" hgap="40" prefWidth="214.0" translateX="-50" vgap="5">

            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints />
            <ColumnConstraints />
            </columnConstraints>

            <children>
                <Label text="Bar Code:" />
                <Label text="Amount:" GridPane.rowIndex="1" />
                <Label text="Name:" GridPane.rowIndex="2" />
                <Label text="Price" GridPane.rowIndex="3" />
                <Button fx:id="addItemButton" alignment="CENTER" mnemonicParsing="false" text="Add product" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.rowSpan="3" />
                <Button fx:id="delete" text="Delete Product" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="0" GridPane.rowSpan="3" />
                <TextField fx:id="barCodeField" GridPane.columnIndex="1" />
                <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <TitledPane alignment="CENTER" animated="false" collapsible="false" text="Warehouse status" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
            <BorderPane>
                <center>
                    <TableView fx:id="warehouseTableView" styleClass="blue_style" BorderPane.alignment="CENTER">
                        <columns>
                            <TableColumn text="Id">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="name" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Price">
                                <cellValueFactory>
                                    <PropertyValueFactory property="price" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Quantity">
                                <cellValueFactory>
                                    <PropertyValueFactory property="quantity" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </center>
                <top>
                    <Button fx:id="refresh" text="Refresh warehouse" BorderPane.alignment="TOP_LEFT" />
                </top>
            </BorderPane>
        </TitledPane>
    </VBox>
    <TitledPane animated="false" layoutX="-2.0" prefHeight="190.0" prefWidth="191.0" text="Your cart" textAlignment="CENTER" AnchorPane.bottomAnchor="119.0" AnchorPane.leftAnchor="0.0">
        <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="181.0">
                <TableView fx:id="cartTableView" prefHeight="163.0" prefWidth="200.0" styleClass="blue_style">
                    <columns>
                        <TableColumn minWidth="0.0" prefWidth="82.66666662693024" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="0.0" prefWidth="40.66667938232422" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="66.00001525878906" text="Quantity">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantity" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </AnchorPane>
        </content>
    </TitledPane>
</AnchorPane>
